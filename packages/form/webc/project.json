{
  "name": "form-webc",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/form/webc/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/form/webc",
        "main": "packages/form/webc/src/index.ts",
        "tsConfig": "packages/form/webc/tsconfig.lib.json",
        "assets": ["packages/form/webc/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs form-webc {args.ver} {args.tag}",
        "args": "--ver='0.0.10' --tag='latest'"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/form/webc/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/form/webc"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/packages/form/webc"
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
